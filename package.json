{
  "name": "mcp-chatbot",
  "version": "1.0.0",
  "description": "Production-grade MCP-enabled chatbot with configurable LLM backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared",
    "electron"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=electron",
    "dev:web": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:electron": "npm run build --workspace=electron",
    "package": "npm run package --workspace=electron",
    "package:linux": "npm run package:linux --workspace=electron",
    "package:mac": "npm run package:mac --workspace=electron",
    "package:win": "npm run package:win --workspace=electron",
    "test": "npm run test --workspaces",
    "test:integration": "npm run test:integration --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

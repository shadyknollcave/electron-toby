{
  "name": "tobyai-electron",
  "version": "1.0.0",
  "description": "TobyAI MCP Chatbot - Desktop Application",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:backend && npm run build:electron && NODE_ENV=development electron .",
    "build": "npm run build:backend && npm run build:frontend:electron && npm run build:electron",
    "build:backend": "cd ../backend && npm run build",
    "build:frontend:electron": "cd ../frontend && ELECTRON_BUILD=true npm run build",
    "build:electron": "tsc -p tsconfig.json",
    "package": "npm run build && electron-builder build --publish never",
    "package:linux": "npm run package -- --linux",
    "package:mac": "npm run package -- --mac",
    "package:win": "npm run package -- --win"
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5"
  },
  "author": "TobyAI Team",
  "license": "MIT"
}
